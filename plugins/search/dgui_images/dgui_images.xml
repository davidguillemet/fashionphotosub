<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="search" method="upgrade">
	<name>plg_search_dgui_images</name>
	<author>David Guillemet</author>
	<creationDate>24th August 2014</creationDate>
    <copyright>Copyright (C) 2014 David Guillemet. All rights reserved.</copyright>
    <license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
    <authorEmail>webmaster@davidphotosub.com</authorEmail>
    <authorUrl>www.davidphotosub.com/</authorUrl>
    <version>1.0.0</version>
    <description>PLG_SEARCH_DGUI_IMAGES_XML_DESCRIPTION</description>
	<files>
		<filename plugin="dgui_images">dgui_images.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="languages">
		<language tag="fr-FR">fr-FR/fr-FR.plg_search_dgui_images.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_search_dgui_images.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="PLG_SEARCH_CONTENT_FIELD_SEARCHLIMIT_DESC"
					label="PLG_SEARCH_CONTENT_FIELD_SEARCHLIMIT_LABEL"
					size="5"
				/>

				<field name="search_content" type="radio"
					default="1" class="btn-group"
					description="PLG_SEARCH_CONTENT_FIELD_CONTENT_DESC"
					label="PLG_SEARCH_CONTENT_FIELD_CONTENT_LABEL"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>

				<field name="search_archived" type="radio"
					default="1" class="btn-group"
					description="PLG_SEARCH_CONTENT_FIELD_ARCHIVED_DESC"
					label="PLG_SEARCH_CONTENT_FIELD_ARCHIVED_LABEL"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
